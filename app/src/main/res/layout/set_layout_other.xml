<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:textSize="16sp"
            android:textColor="@color/gray4"
            android:textStyle="bold"
            android:text="其他设置"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/gray2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:orientation="vertical">

        <Button
            android:id="@+id/set_other_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector_color1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_14"
            android:text="关于"
            android:textColor="@color/gray4" />

        <Button
            android:id="@+id/set_other_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector_color1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_14"
            android:text="帮助"
            android:textColor="@color/gray4" />

        <Button
            android:id="@+id/set_btn_app_set1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector_color1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_14"
            android:text="检查更新"
            android:textColor="@color/gray4" />

        <Button
            android:id="@+id/set_other_btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector_color1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_14"
            android:text="给个好评"
            android:textColor="@color/gray4" />

        <Button
            android:id="@+id/set_other_btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg_selector_color1"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_14"
            android:text="意见反馈"
            android:textColor="@color/gray4" />

    </LinearLayout>

</LinearLayout>