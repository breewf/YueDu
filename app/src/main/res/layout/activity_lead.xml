<com.flavienlaurent.discrollview.lib.DiscrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0">

    <com.flavienlaurent.discrollview.lib.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:background="@color/gray1"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="24dp"
            android:text="Hello! YueDu"
            android:textColor="@color/gray4"
            android:textSize="64sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:src="@mipmap/ic_launcher_gray"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="欢迎来到悦读"
            android:textColor="@color/gray4"
            android:textSize="24sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="20dp"
            android:text="Welcome to YueDu!"
            android:textColor="@color/gray4"
            android:textSize="20sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft|fromBottom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="20dp"
            android:text="If only time could stay the moment where we first met!"
            android:textColor="@color/gray4"
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight|fromBottom" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_launch_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="轻•悦读  轻•生活"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="简约简洁•但不简单"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="每日推荐•精彩有约"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="什么文章是你的菜"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="犀利短句就在这里"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="俗话说有图有真相"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromRight">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                android:src="@mipmap/image_lead_pic5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:text="主题颜色•随心更换"
                android:textColor="@color/gray4"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_40"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="阳光温热，岁月静好"
                android:textColor="@color/gray4"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="路途遥远，勿忘初心"
                android:textColor="@color/gray4"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="匆匆那年，似水流年"
                android:textColor="@color/gray4"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="且行且珍惜"
                android:textColor="@color/gray4"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="悦读"
                android:textColor="@color/gray4"
                android:textStyle="bold"
                android:textSize="26sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_40"
            android:background="@color/gray1"
            android:gravity="center"
            android:orientation="vertical"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/ic_launcher_gray" />

            <Button
                android:id="@+id/btn_lead_startApp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/gray3"
                android:text="开启悦读"
                android:textColor="@drawable/tv_bg_selector_color1" />

        </LinearLayout>


    </com.flavienlaurent.discrollview.lib.DiscrollViewContent>
</com.flavienlaurent.discrollview.lib.DiscrollView>

