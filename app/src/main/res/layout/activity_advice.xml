<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray4"
        android:text="感谢有您，期待您的反馈"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/met_advice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        app:met_baseColor="@color/gray4"
        app:met_floatingLabel="highlight"
        app:met_clearButton="true"
        app:met_helperText="畅所欲言，倾听您的声音"
        android:hint="输入您要反馈的内容"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/met_advice_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            app:met_baseColor="@color/gray4"
            app:met_floatingLabel="highlight"
            app:met_clearButton="true"
            app:met_helperText="您的QQ号码或者邮箱均可，方便与您联系"
            android:hint="输入您的联系方式"/>

        <Button
            android:id="@+id/btn_advice_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:textColor="@drawable/tv_bg_selector_color1"
            android:text="提交您的宝贵意见"/>

    </LinearLayout>

</LinearLayout>
