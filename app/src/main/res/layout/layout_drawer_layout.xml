<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/btn_bg_selector_color1"
            android:padding="@dimen/padding_10">

            <ImageView
                android:id="@+id/user_head_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_40"
                android:src="@mipmap/ic_my_defalut_avatar" />

            <TextView
                android:id="@+id/tv_user_clickLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_40"
                android:textColor="@color/gray4"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="点击登录" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@color/gray2"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/drawer_btn_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_news"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="新闻"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_article"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_article"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="文章"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_joke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_message"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="段子"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_music"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_music"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="音乐"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_video"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="视频"
                        android:textColor="@color/gray4" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_marginRight="@dimen/margin_4"
                    android:layout_marginTop="@dimen/margin_4"
                    android:background="@color/gray2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/drawer_btn_set_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_cloud"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="主题颜色"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_set"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_set"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="系统设置"
                        android:textColor="@color/gray4" />

                    <Button
                        android:id="@+id/drawer_btn_exit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_bg_selector_color1"
                        android:drawableLeft="@mipmap/icon_exit"
                        android:drawablePadding="@dimen/padding_10"
                        android:gravity="center_vertical"
                        android:onClick="drawerBtnClick"
                        android:padding="@dimen/padding_10"
                        android:text="退出应用"
                        android:textColor="@color/gray4" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>