<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_20"
    android:layout_marginBottom="@dimen/margin_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:text="退出动画设置"
        android:textColor="@color/gray4"
        android:textStyle="bold"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_6"
        android:background="@color/gray2" />

    <Button
        android:id="@+id/set_btn_anim_out_set15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="淡出"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="向内缩放消失（默认）"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="向内缩放+旋转消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="消失到左下角"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="消失到右下角"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="消失到左上角"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="消失到右上角"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到底部缩放消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到左侧缩放消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到右侧缩放消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到上方缩放消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到底部消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到左侧消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到右侧消失"
        android:textColor="@color/gray4" />

    <Button
        android:id="@+id/set_btn_anim_out_set14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_selector_color1"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_14"
        android:text="到上方消失"
        android:textColor="@color/gray4" />

</LinearLayout>