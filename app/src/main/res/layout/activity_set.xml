<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/set_layout_network"></include>

                <include layout="@layout/set_layout_app_set"></include>

                <include layout="@layout/set_layout_look"></include>

                <include layout="@layout/set_layout_other"></include>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include layout="@layout/layout_snack_bar"></include>
</RelativeLayout>
